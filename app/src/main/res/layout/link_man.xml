<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/linkman_image_s"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/linkman_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:text="张三"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_text_size" />
            <TextView
                android:id="@+id/linkman_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Danny:不是这样的"
                android:textColor="@color/text_color"
                android:textSize="22sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/call_click"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:paddingEnd="30dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <com.example.jrd48.chat.CircleImageView
                android:id="@+id/call_link"
                android:clickable="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_call"
                android:focusable="true"
                android:listSelector="@drawable/btn_call" />
        </LinearLayout>
</LinearLayout>