<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        
        <ImageView
            android:id="@+id/request_in_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_useravatar"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/request_in_text_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Tx"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/request_in_text_friend_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="te"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/request_in_accept"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_change_color1"
                android:text="接受"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/request_in_refuse"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/request_in_accept"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/request_in_accept"
                android:background="@drawable/photo_delete_button"
                android:text="拒绝"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>