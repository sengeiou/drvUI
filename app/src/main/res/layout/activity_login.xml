<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/close" />

    <RelativeLayout
        android:layout_width="440dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_panel_relative_layout"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="82dp"
            android:layout_height="73dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_logo" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="149dp"
            android:layout_height="20dp"
            android:layout_below="@+id/imgIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="九方视频  通联境界"
            android:textColor="#ffffffff"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rlName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvText"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账号"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edName"
                android:layout_width="313dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tvName"
                android:background="@drawable/bg_panel_edittext"
                android:inputType="number"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rlName"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvPass"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="密码"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edPass"
                android:layout_width="313dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tvPass"
                android:background="@drawable/bg_panel_edittext"
                android:inputType="textPassword"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlPass"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="14dp">

            <TextView
                android:id="@+id/tvRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/tvLogin"
                android:text="注册账号"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="50dp"
                android:text="登录"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvForget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@+id/tvLogin"
                android:text="忘记密码"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
