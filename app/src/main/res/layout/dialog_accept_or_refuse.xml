<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_accept"
        android:nextFocusUp="@+id/rl_refuse"
        android:nextFocusDown="@+id/rl_refuse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_stroke_bg">

        <Button
            android:id="@+id/accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/simple_background_selector"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/accept" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_refuse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-1dp"
        android:nextFocusUp="@+id/rl_accept"
        android:nextFocusDown="@+id/rl_accept"
        android:background="@drawable/pop_stroke_bg">

        <Button
            android:id="@+id/refuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/simple_background_selector"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/refuse" />
    </RelativeLayout>
</LinearLayout>