<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.luobin.search.friends.car.listForSelectUsed.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dip"
        android:background="@drawable/border_search_brand_select"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:gravity="center_vertical"
        android:hint="请输入关键字"
        android:padding="@dimen/drawable_padding"
        android:textColorHint="@color/search_friend"
        android:singleLine="true"
        android:textSize="15.0dip" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.luobin.search.friends.car.listForSelectUsed.view.PullToZoomListViewEx
            android:id="@+id/content_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@null" />

        <TextView
            android:id="@+id/dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/show_head_toast_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <com.luobin.search.friends.car.listForSelectUsed.SideBar
            android:id="@+id/sidrbar"
            android:layout_width="20dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="0.1dp" />
    </FrameLayout>

</LinearLayout>