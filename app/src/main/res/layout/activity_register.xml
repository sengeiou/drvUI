<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000981">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/bg_panel_relative_layout">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="注册账号"
            android:textColor="@color/text_color_90white"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rlPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="20dp">


            <EditText
                android:id="@+id/edPhone"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_panel_edittext"
                android:hint="请输入手机号"
                android:inputType="number"
                android:textColor="@color/text_color_90white"
                android:textColorHint="@color/text_color_90white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/edPhone"
                android:gravity="center"
                android:text="手机号码"
                android:textColor="@color/text_color_90white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvSendCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/edPhone"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/text_color_90white"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rlPhone"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/edCode"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_panel_edittext"
                android:hint="请输入验证码"
                android:inputType="number"
                android:textColor="@color/text_color_90white"
                android:textColorHint="@color/text_color_90white"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tvCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/edCode"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/text_color_90white"
                android:textSize="16sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rlCode"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/edPass"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_panel_edittext"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="@color/text_color_90white"
                android:textColorHint="@color/text_color_90white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPass"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/edPass"
                android:gravity="center"
                android:text="密码"
                android:textColor="@color/text_color_90white"
                android:textSize="16sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnSure"
            android:layout_width="80dp"
            android:layout_height="38dp"
            android:layout_below="@+id/rlPass"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/bg_button"
            android:text="完成"
            android:textColor="@color/text_color_90white"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>
