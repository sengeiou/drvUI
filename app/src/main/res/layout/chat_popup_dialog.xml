<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_layout2"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:fadingEdge="horizontal|vertical"
    android:fadingEdgeLength="5dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/textColor"
        android:visibility="visible" />
    <LinearLayout
        android:id="@+id/layout_modify_team"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_modify_team"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/modify" />

        <TextView
            android:id="@+id/tv_modify_team"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="修改群信息"
            android:textColor="@color/white"
            android:textSize="15dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_line_one"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_see_all_member"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_see_all_member"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/see" />

        <TextView
            android:id="@+id/tv_see_all_member"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="查看群成员"
            android:textColor="@color/white"
            android:textSize="15dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_line_two"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_dismiss_team"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_dismiss_team"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dismiss" />

        <TextView
            android:id="@+id/tv_dismiss_team"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="解散该群"
            android:textColor="@color/white"
            android:textSize="15dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_line_three"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_hang_up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_bg"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            android:padding="7dp"
            android:src="@drawable/close_chat_room" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="关闭聊天室"
            android:textColor="@color/white"
            android:textSize="15dip" />
    </LinearLayout>

</LinearLayout>