<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp" >

        
        <ImageView
            android:id="@+id/request_in_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/setting2"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="99"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/request_in_text_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="Tx"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/request_in_text_friend_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="te"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/request_in_accept"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_change_color1"
                android:text="接受"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/request_in_refuse"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/request_in_accept"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/request_in_accept"
                android:background="@drawable/photo_delete_button"
                android:text="拒绝"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>