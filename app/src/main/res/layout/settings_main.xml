<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/settings_page_background_left"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/settings_left_padding"
            android:paddingRight="@dimen/settings_left_padding"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:textSize="@dimen/settings_left_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/settings_line" />

        <ListView
            android:id="@+id/lv_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/settings_left_padding"
            android:paddingRight="@dimen/settings_left_padding"
            android:scrollbars="@null"
            android:fadingEdge="none"
            android:footerDividersEnabled="false"
            android:overScrollFooter="@android:color/transparent" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/settings_page_background_right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_right"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_item_height"
            android:background="@color/settings_page_background_right_text"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/settings_right_padding"
            android:paddingRight="@dimen/settings_right_padding"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:textSize="@dimen/settings_left_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/settings_line" />

        <ListView
            android:id="@+id/lv_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/settings_right_padding"
            android:paddingRight="@dimen/settings_right_padding"
            android:scrollbars="@null"
            android:fadingEdge="none">
        </ListView>
    </LinearLayout>

</LinearLayout>