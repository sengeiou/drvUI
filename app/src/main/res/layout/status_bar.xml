<LinearLayout android:id="@+id/statusBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="14dp"
            android:background="@drawable/icon_gps"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWirte"
            android:textSize="@dimen/status_textsize"
            android:text="GPS"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWirte"
            android:textSize="@dimen/status_textsize"
            android:text="4G"
            />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="13dp"
            android:background="@drawable/icon_4g"
            android:layout_marginLeft="2dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="13dp"
            android:background="@drawable/icon_wifi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWirte"
            android:textSize="@dimen/status_textsize"
            android:text="WIFI"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>
</LinearLayout>