<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_window_focused="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/FloatingActionButton_focused" />
            <size
                android:width="80dp"
                android:height="80dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/FloatingActionButton_up" />
            <size
                android:width="80dp"
                android:height="80dp"/>
        </shape>
    </item>
</selector>