<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <!-- 角度 -->
            <corners android:radius="2dp"/>
            <!-- 填充色 -->
            <solid android:color="#7f87CDE9"/>
            <!-- 描边 设置线宽及颜色 -->
            <size
                android:width="50dp"
                android:height="50dp"/>
            <stroke
                android:width="1dp"
                android:color="#70B2AFAF" />
        </shape>


    </item>
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <!-- 角度 -->
            <corners android:radius="2dp"/>
            <!-- 填充色 -->
            <solid android:color="#7f87CDE9"/>
            <!-- 描边 设置线宽及颜色 -->
            <size
                android:width="50dp"
                android:height="50dp"/>
            <stroke
                android:width="1dp"
                android:color="#70B2AFAF" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >
            <!-- 角度 -->
            <corners android:radius="2dp"/>
            <!-- 填充色 -->
            <solid android:color="#7fffffff"/>
            <!-- 描边 设置线宽及颜色 -->
            <size
                android:width="50dp"
                android:height="50dp"/>
            <stroke
                android:width="1dp"
                android:color="#70B2AFAF" />
        </shape>
    </item>

</selector>